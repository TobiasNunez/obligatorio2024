@{
    ViewData["Title"] = "Login";
}

<section class="hero d-flex align-items-center">
    <div class="image-container">
        <div class="row">
            <div class="col-md-6">
                <img src="~/images/ia-despegada.webp" class="img-fluid rounded" alt="About Us">
            </div>
            <div class="col-md-6 text-center">
                <h1>
                    <img src="~/images/mal-tiempo2.png" class="img-fluid rounded" alt="About Us">
                </h1>
                <p>Bienvenido de nuevo. Por favor, ingresa tus credenciales para continuar.</p>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="section-title">
            <h2>Login</h2>
            <p>Por favor, ingresa tus datos para acceder a tu cuenta.</p>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <form asp-controller="Inicio" asp-action="Login" method="post">
                            <div class="form-group">
                                <label for="email" class="control-label">Email:</label>
                                <input type="email" class="form-control" id="email" name="email" required />
                            </div>
                            <div class="form-group">
                                <label for="contrasena" class="control-label">Contraseña:</label>
                                <input type="password" class="form-control" id="contrasena" name="contrasena" required />
                            </div>
                            <button type="submit" class="btn btn-primary btn-block login-button">Login</button>
                        </form>
                        @if (ViewData["Mensaje"] != null)
                        {
                                <div class="alert alert-danger mt-3">@ViewData["Mensaje"]</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

