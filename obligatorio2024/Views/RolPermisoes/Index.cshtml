@model IEnumerable<obligatorio2024.Models.RolPermiso>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-create-custom">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Permiso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rol.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Permiso.NombrePermiso)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdRol" asp-route-permiso-id="@item.IdPermisos" class="btn btn-create-custom"></a> |
                    <a asp-action="Details" asp-route-id="@item.IdRol" asp-route-permiso-id="@item.IdPermisos" class="btn btn-create-custom"></a> |
                    <a asp-action="Delete" asp-route-id="@item.IdRol" asp-route-permiso-id="@item.IdPermisos" class="btn btn-create-custom"></a>
                </td>
            </tr>
        }
    </tbody>
</table>
